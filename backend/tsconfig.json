{
  "compilerOptions": {
    "experimentalDecorators": true,
    "types": ["node"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"]
}
